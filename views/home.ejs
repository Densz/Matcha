<div class="container">
    <div class="row">
        <!-- LEFT COLUMN -->
        <div class="col-sm-3">
            <div class="box hl1">
                <div>
                    <img class="profile_picture" src="/images/medium_kneth.jpg">
                </div>
                <p><b><%= firstName %> <%= lastName %></b></p>
                <p><%= bio %></p>
                <br>
                <p><b>Popularity score</b></p>
                <img class="profile_star" src="/images/star.png">
                <img class="profile_star" src="/images/star.png">
                <img class="profile_star" src="/images/star.png">
            </div>

            <div class="box hl3">
                <h4>Interests</h4>
                <p><b>Add your interest</b></p>
                <form method="post" action="/home/addHashtag">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Hashtag" name="hashtag" required="true">
                        <span class="input-group-btn">
                            <input type="submit" class="btn btn-default" value="Add">
                        </span>
                    </div>
                </form>
                <div class="hashtag-box">
                <% if (hashtag) { %>
                    <% for (var i = 0; i < hashtag.length; i++) { %>
                        <span class="hashtag">#<%= hashtag[i] %></span>
                    <% } %>
                <% } %>
                </div>
            </div>
        </div>
        <!-- MIDDLE COLUMN -->
        <div class="col-sm-6">
            <div class="box swipe-box">
                <span><b>Lorem Ipsum</b></span><br>
                <img class="profile_star" src="/images/star.png">
                <img class="profile_star" src="/images/star.png">
                <img class="profile_star" src="/images/star.png">
                <img class="profile_star" src="/images/star.png">
                <img class="profile_star" src="/images/star.png">
                <img class="profile_star" src="/images/star.png">
                <img class="profile_star" src="/images/star.png"><br><br>
                <img class="match-img" src="/images/medium_spalmaro.jpg"><br><br>
                <img class="like" src="/images/sign-error.png">
                <img class="dislike" src="/images/sign-check.png">
            </div>
        </div>
        <!-- RIGHT COLUMN -->
        <div class="col-sm-3">
            <div class="box hr1">
                <h4>Filter</h4>
                <form action="/signup/submit_interests" method="POST">
                    <span><b>Age</b></span><br>
                        <div class="range-age-values" id="skip-value-lower"></div>
                        <div class="range-age-values" id="skip-value-upper"></div>
                        <div id="range_age"></div><br>
                    <span><b>Score</b></span><br>
                        <div class="range-age-values" id="skip-value-lower-score"></div>
                        <div class="range-age-values" id="skip-value-upper-score"></div>
                        <div id="range_score"></div>
                </form>
            </div>
            <div class="box hl2">
                <h4>Orientation</h4>
                <form action="/home/editOrientation" method="post">
                    <div class="center-orientation">
                        <div class="btn-group" role="group" aria-label="...">
                            <input type="submit" name="orientation" class="btn btn-default<%= orientation==='Men' ? ' selected': '' %> " value="Men">
                            <input type="submit" name="orientation" class="btn btn-default<%= orientation==='Bisexual' ? ' selected': '' %>" value="Bisexual">
                            <input type="submit" name="orientation" class="btn btn-default<%= orientation==='Women' ? ' selected': '' %>" value="Women">
                        </div>
                    </div>
                </form>
            </div>
            <div class="box hr2">
                <h4>Location</h4>
                <span><b>Address</b></span><br>
                <form method="post" action="/home/editAddress">
                <div class="input-group">
                    <span class="input-group-btn">
                        <input type="submit" class="btn btn-default" value="Update">
                    </span>
                    <input type="text" name="newAddress" class="form-control" id="location" placeholder="<%= address ? address : tmpAddress %>">
                </div>
                </form>
            </div>
            <div class="box hr3">
                <h4>By interest</h4>
                <div class="input-group">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Search</button>
                    </span>
                    <input type="text" class="form-control" placeholder="#blabla">
                </div>
            </div>
        </div>
    </div>
    <!--
        CHAT BOX
    -->
    <div class="row">
        <div class="col-sm-12">
            <div class="col-sm-4 box hl-chat">
                <div class="chat-people">
                    <div class="chat-img">
                        <img src="/images/medium_ltran.jpg" class="profile_picture_chat">
                    </div>
                    <div class="chat-description">
                        <span><b>Kneth Master</b>&nbsp; <span class="new-match">New</span></span><br>
                        <span>Petite Bio de merde pour cette sous merde</span>
                    </div>
                </div>
                <div class="chat-people last-box">
                    <div class="chat-img">
                        <img src="/images/medium_ltran.jpg" class="profile_picture_chat">
                    </div>
                    <div class="chat-description">
                        <span><b>Kneth Master</b></span><br>
                        <span>Petite Bio de merde pour cette sous merde</span>
                    </div>
                </div>
            </div>
            <div class="col-sm-8 box hl-chat">
                <div class="box message-box col-sm-12 col-xm-12 col-md-12">
                    <div class="row msg-img-text">
                        <div class="col-sm-1 col-xs-1 col-md-1"></div>
                        <div class="col-sm-9 col-xs-9 col-md-9 message-sent" style="text-align: right;"><p>Lorem
                                ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsum</p></div>
                        <div class="col-sm-2 col-xs-2 col-md-2"><img src="/images/medium_ltran.jpg"
                                                            class="profile_picture_chat"></div>
                    </div>
                    <div class="row msg-img-text">
                        <div class="col-sm-2 col-xs-2 col-md-2" style="text-align: right;"><img
                                    src="/images/medium_agrumbac.jpg"
                                                      class="profile_picture_chat"/></div>
                        <div class="col-sm-9 col-xs-9 col-md-9 message-received"><p>Lorem ipsumLorem ipsumLorem ipsumLorem</p></div>
                    </div>
                </div>
                <div class="input-message">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Message">
                        <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Send</button>
                    </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
