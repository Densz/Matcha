<script>
    function url(){
        var url =  window.location.href;
        url = url.split("/");
        return(url[0] + '//' + url[2] + '');
    }

    /* Age range */
    var skipSlider = document.getElementById('range_age');

    noUiSlider.create(skipSlider, {
        range: {
