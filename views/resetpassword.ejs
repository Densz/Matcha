<div class="centered-logo">
	<img src="./images/logo.png" class="logo-form">
</div>

<div class="container_login">
<% if (errors) { %>
    <% for(var i=0; i < errors.length; i++) { %>
	<div class="alert alert-danger">&nbsp;<%- errors[i]['msg'] %></div>
    <% } %>
<% } %>
<h1>Sign in</h1>
	<form action="/submit" method="POST">
        <p><label>New password</label><br><input type="password" name="newPassword" required="true" class="form-row"></p>
		<p><label>New password confirmation</label><br><input type="password" name="newPasswordConfirmation" required="true" class="form-row"></p>
		<p><input type="submit" name="signin" class="btn btn-primary"></p>
	</form>
</div>
