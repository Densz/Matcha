<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="col-sm-12 box">
                <h4>Change email</h4><br>
                <form action="#" method="post">
                    <label>Old email address</label><br>
                    <input type="text" class="form-control" name="old-email">
                    <label>New email address</label><br>
                    <input type="text" class="form-control" name="new-email">
                    <label>Confirm new email address</label><br>
                    <input type="text" class="form-control" name="confirm-new-email"><br>
                    <input type="submit" class="btn btn-primary btn-sm" value="SUBMIT">
                </form>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="col-sm-12 box">
                <h4>Change password</h4>
                <br>
                <form action="#" method="post">
                    <label>Old password</label><br>
                    <input type="password" class="form-control" name="old_password">
                    <label>New password</label><br>
                    <input type="password" class="form-control" name="new_password">
                    <label>Confirm new password</label><br>
                    <input type="password" class="form-control" name="confirm_new_password"><br>
                    <input type="submit" class="btn btn-primary btn-sm" name="change-password" value="SUBMIT">
                </form>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="col-sm-12 box">
                <h4>Change address</h4>
                <br>
                <form action="#" method="post">
                    <label>Current address:</label><br>
                    <span>76 Avenue Parmentier, 75011 Paris</span><br><br>
                    <label>Change address</label><br>
                    <input type="text" class="form-control" name="new_address"><br>
                    <input type="submit" class="btn btn-primary btn-sm" name="change-address" value="SUBMIT">
                </form>
            </div>
        </div>
    </div>
</div>