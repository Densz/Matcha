<div class="centered-logo">
	<img src="./images/logo.png" class="logo-form">
</div>

<div class="container">
<% if (errors) {%>
	<div class="alert alert-danger">&nbsp;<%- errors %></div>
<% } %>
<h1>Sign in</h1>
	<form action="/signin/submit" method="POST">
		<p><label>Login</label><br><input type="text" name="login" required="true" class="form-row"></p>
		<p><label>Password</label><br><input type="password" name="password" required="true" class="form-row"></p>
		<p><input type="submit" name="signin" class="btn btn-primary"></p>
	</form>
	<p>Don't have an account yet? <a href="/signup">Sign up</a></p>
	<p><a href="/resetPassword">Forgot password?</a></p>
</div>
