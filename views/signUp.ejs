<div class="centered-logo">
	<img src="./images/logo.png" class="logo-form">
</div>

<div class="container">
<% if (errors) { %>
	<div class="alert alert-danger">&nbsp;<%- errors %></div>
<% } %>
<h1>Sign up</h1>
	<form action="/signup/submit" method="POST">
		<p><label>First name</label><br><input type="text" name="firstName" required="true" class="form-row"></p>
		<p><label>Last name</label><br><input type="text" name="lastName" required="true" class="form-row"></p>
		<p><label>Login</label><br><input type="text" name="login" required="true" class="form-row"></p>
		<p><label>Email address</label><br><input type="text" name="email" required="true" class="form-row"></p>
		<p><label>Password</label><br><input type="password" name="password" required="true" class="form-row"></p>
		<p><label>Password confirmation</label><br><input type="password" name="confirmPassword" required="true" class="form-row"></p>
		<p><input type="submit" name="signup" class="btn btn-primary"></p>
	</form>
	<p>Already have an account? <a href="/signin">Sign in</a></p>
</div>